<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rhythmcrowd">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.SignInActivity"
            android:label="@string/sign_in"/>
        <activity android:name=".Activities.SignUpActivity"
            android:label="@string/sign_up"/>
        <activity android:name=".Activities.SearchActivity"
            android:label="@string/search"/>
        <activity android:name=".Activities.AddCommentsActivity"
            android:label="@string/comments"/>
        <activity android:name=".Activities.AddPostActivity"
            android:label="@string/add_post"/>
        <activity android:name=".Activities.ProfileActivity"
            android:label="@string/profile"/>
        <activity android:name=".Activities.AddProfilePostActivity"
            android:label="@string/add_profile_post"/>
        <activity android:name=".Activities.SettingsActivity"
            android:label="@string/settings"/>
        <activity android:name=".Activities.SearchByNameActivity"
            android:label="@string/search_by_name"/>
        <activity android:name=".Activities.AboutActivity"
            android:label="@string/about"/>
        <activity android:name=".Activities.ConnectionsActivity"
            android:label="@string/connections"/>
        <activity android:name=".Activities.SongsActivity"
            android:label="@string/songs"/>

    </application>

</manifest>